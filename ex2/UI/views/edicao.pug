extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue
            h2
                i.fas.fa-calendar-alt
                |  Edição #{edicao.id} (#{edicao.anoEdição})
        
        .w3-container
            .w3-panel.w3-light-grey
                p
                    strong Organizador: 
                    a(href=`/paises/${edicao.organizacao.replace(/ /g, '_')}`)= edicao.organizacao
                if edicao.vencedor
                    p
                        strong Vencedor: 
                        a(href=`/paises/${edicao.vencedor.replace(/ /g, '_')}`)= edicao.vencedor
                else
                    p
                        strong Vencedor: 
                        | Não houve vencedor (edição cancelada)
            
            if edicao.musicas && edicao.musicas.length > 0
                h3.w3-text-blue
                    i.fas.fa-music
                    |  Músicas Participantes
                
                table.w3-table-all.w3-hoverable
                    thead
                        tr.w3-blue
                            th Música
                            th Intérprete
                            th País
                    tbody
                        each musica in edicao.musicas
                            tr
                                td= musica.título
                                td= musica.intérprete
                                td
                                    a(href=`/paises/${musica.país.replace(/ /g, '_')}`)= musica.país
            else
                .w3-panel.w3-yellow
                    p Não há informações sobre as músicas participantes desta edição.
    
    .w3-container.w3-margin-top
        a.w3-button.w3-blue(href='/')
            i.fas.fa-arrow-left
            |  Voltar à lista