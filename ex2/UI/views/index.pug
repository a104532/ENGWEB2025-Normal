extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue
            h2
                i.fas.fa-list
                |  Todas as Edições
        
        .w3-container
            table.w3-table-all.w3-hoverable
                thead
                    tr.w3-blue
                        th ID
                        th Ano
                        th Organizador
                        th Vencedor
                tbody
                    each edicao in edicoes
                        tr
                            td
                                a(href=`/${edicao.id}`)= edicao.id
                            td= edicao.anoEdicao
                            td
                                a(href=`/paises/${edicao.organizacao.replace(/ /g, '_')}`)= edicao.organizacao
                            td
                                if edicao.vencedor
                                    a(href=`/paises/${edicao.vencedor.replace(/ /g, '_')}`)= edicao.vencedor
                                else
                                    | N/A
    
    .w3-container.w3-margin-top
        a.w3-button.w3-blue(href='/')
            i.fas.fa-home
            |  Voltar